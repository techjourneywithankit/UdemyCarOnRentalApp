<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Booking_Completion_Check</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL( Status__c ,&apos;Completed&apos;) &amp;&amp; NOT(ISPICKVAL( Payment_Status__c , &apos;Paid&apos;))</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>Booking status cannot be completed if payment status is not paid</errorMessage>
</ValidationRule>
